@model CommentModel

<form asp-controller="Home" asp-action="AddComment" method="post" class="mx-auto" style="margin-top:1%; width:60%;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input asp-for="PostId" type="hidden" value="" />
        <input asp-for="UserId" type="hidden" value="TEMP" />
        <input asp-for="Username" type="hidden" value="TEMP" />
        <input asp-for="PostDate" type="hidden" value="@DateTime.Now" />
    </div>

    <div class="form-group">
        <label asp-for="Message" class="control-label" style="margin-bottom:2%"></label>
        <textarea asp-for="Message" id="the-textarea" class="bg-transparent input-group mx-lg-auto" placeholder="Add a comment..." rows="4" cols="50" maxlength="2000" style="white-space:pre-line; color:white"></textarea>
        <span id="current">0</span>
        <span id="maximum">/ 2000</span>

        @*<div class="form-group">
            <textarea asp-for="@Model.Caption" id="the-textarea" class="bg-transparent input-group mx-lg-auto" placeholder="Type here!" rows="4" cols="50" maxlength="2000" style="color:white;" autofocus></textarea>
            <div id="the-count">
                <span asp-validation-for="@Model.Caption" id="current">0</span>
                <span id="maximum">/ 2000</span>
            </div>
        </div>*@
    </div>
    
    <button type="submit" class="btn btn-primary">
        Post Comment
    </button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
