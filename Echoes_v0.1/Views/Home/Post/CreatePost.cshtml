@model PostModel

<form asp-controller="Home" asp-action="CreatePost" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        @*<input asp-for="@Model.Caption" class="form-control" />*@

        <label asp-for="@Model.Caption" class="control-label"></label>
        <br />
        <textarea asp-for="@Model.Caption" class="card-group mx-lg-auto" placeholder="Type here!" rows="4" cols="50" maxlength="2000"></textarea>
        <span asp-validation-for="Caption" class="text-danger"></span>

        <span asp-validation-for="@Model.Caption" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="formFile" class="form-label mt-4">Default file input example</label>
        <input accept="image/jpeg,image/png" type="file" id="formFile" asp-for="@Model.Image">
    </div>

    <div class="modal-footer">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

