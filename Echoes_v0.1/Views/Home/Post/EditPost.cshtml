@model PostModel

@if (Model == null)
{
    <h3>No Post Found</h3>
}

<form asp-controller="Home" asp-action="EditPost" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="border p-3 mt-4 text-center">
        <div class="row pb-2">
            <h3 class="text-primary">Edit Post</h3>
        </div>
        <hr />
        @*hidden properties so no data is lost*@
        <div class="mb-3">
            <input asp-for="@Model.PostId" type="hidden" value="@Model.PostId" />
            <input asp-for="@Model.UserId" type="hidden" value="@Model.UserId" />
            <input asp-for="@Model.PostDate" type="hidden" value="@Model.PostDate" />
            <input asp-for="@Model.EditDate" type="hidden" value="@DateTime.Now" />
            <input asp-for="UserId" type="hidden" value="@Model.UserId" />
            @*          <input asp-for="ProfilePicture" type="hidden" value="@Model.ProfilePicture" />*@
            <input asp-for="@Model.ImageUrl" type="hidden" value="@Model.ImageUrl" />
        </div>

        <div class="form-group">
            <label asp-for="Caption" class="control-label"></label>
            <textarea asp-for="Caption" id="the-textarea" class="bg-transparent input-group mx-lg-auto" placeholder="Type here!" rows="4" cols="50" maxlength="2000" style="color:white;" autofocus></textarea>
            <div id="the-count">
                <span id="current">0</span>
                <span id="maximum">/ 2000</span>
            </div>
        </div>

        @if (!String.IsNullOrEmpty(Model.ImageUrl))
        {
            <hr />
            <div class="col-xl card-img" style="margin-left:auto; align-content:center;">
                <img src="~/Images/@Model.ImageUrl" style=" margin-left:25%;width:50%; height:auto; border:dashed;" />
            </div>
        }

        <button type="submit" class="btn btn-primary">Post Edit</button>
        <a href='javascript:history.go(-1)'>Back</a>
    </div>
</form>
