@model ApplicationUser

<form method="post" asp-controller="Home" asp-action="EditProfile">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Profile</h2>
            <hr />
        </div>
        <input asp-for="Id" type="hidden" value="@ViewBag.UserId" />

        <div class="form-floating mb-3">
            @if (!Model.ProfilePicture.Contains(".png") || !Model.ProfilePicture.Contains(".jpg"))
            {
                <h5 class="card-title"> <img width="500" height="auto" src="https://cdn-icons-png.flaticon.com/512/3177/3177440.png" /> </h5>
            } else {
                <h5 class="card-title"> <img width="500" height="auto" src="@Model.ProfilePicture" /> </h5>
            }
            <label asp-for="ProfilePicture"></label>
            <input asp-for="ProfilePicture" class="form-control-plaintext" placeholder="Image URL" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>

        ///
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <label asp-for="Name" class="form-label">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Uname" class="form-control" placeholder="Please choose your username." />
            <label asp-for="Uname" class="form-label">Username</label>
        </div>
        <div class="form-floating mb-3">
            <label asp-for="Bio"></label>
            <textarea asp-for="Bio" class="form-control" rows="10" spellcheck="true"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="DateOfBirth" class="form-control" />
            <label asp-for="DateOfBirth" class="form-label">Birthday</label>
        </div>

        @*<div class="form-floating mb-3">
            <input asp-for="ProfilePicture" class="form-control" />
            <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                    <input asp-for="ProfilePicture" class="form-control" type="file" />
            <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
        </div>*@
        ///

       <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update
            @*icon gotten from https://icons.getbootstrap.com*@
        </button>

        <a asp-controller="Home" asp-action="Profile" class="btn btn-secondary">
            Back to Profile Page
        </a>
    </div>
</form>