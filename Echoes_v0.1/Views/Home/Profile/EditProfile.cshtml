@model ApplicationUser

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-dismissible alert-success sticky-top">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<form align="center" method="post" asp-controller="Home" asp-action="EditProfile" enctype="multipart/form-data">
    <div class="mx-lg-auto border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Profile</h2>
            <hr />
        </div>
        <input asp-for="Id" type="hidden" value="@ViewBag.UserId" />
        <input asp-for="@Model.JoinDate" type="hidden" value="@Model.JoinDate"/>
        
        @*profile picture*@
        <div class="form-group mb-3">
            <label asp-for="ProfilePicture" class="form-label mt-4">Profile Picture</label>
            <h5 class="card-title">
                <picture>
                    <img class="img_round" width="500" height="auto" src="~/ProfilePictures/@Model.ProfilePicture" />
                </picture>
            </h5>
            <br />
            <input class="form-control bg-transparent" accept="image/jpeg,image/png" type="file" asp-for="@Model.Image" style="color:white; border:dashed">
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control bg-transparent" style="color:white; border:dashed" placeholder="Name" />
            <label asp-for="Name" class="form-label">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Uname" class="form-control bg-transparent" style="color:white; border:dashed" placeholder="Please choose your username." />
            <label asp-for="Uname" class="form-label">Username</label>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="Bio" class="form-control bg-transparent" style="color:white; border:dashed" rows="10" spellcheck="true"></textarea>
            <label asp-for="Bio">Bio</label>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="DateOfBirth" class="form-control bg-transparent" style="color:white; border:dashed" />
            <label asp-for="DateOfBirth" class="form-label">Birthday</label>
        </div>
       <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update
            @*icon gotten from https://icons.getbootstrap.com*@
        </button>

        <a asp-controller="Home" asp-action="Profile" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>