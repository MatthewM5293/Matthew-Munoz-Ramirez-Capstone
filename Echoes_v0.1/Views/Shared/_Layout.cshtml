<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Echo BETA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Echoes_v0._1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cyborg.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<style>
    body {
        font-family: "VT323", monospace;
        font-size: 1.3em;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-md bg-dark fixed-left" data-bs-theme="dark" style="width:17.5%;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor04" aria-controls="navbarColor04" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarColor04">
                    <ul class="navbar-nav me-auto" style="margin-left:5%; margin-bottom:1%">
                        <li style="margin-bottom:1%">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Echo BETA</a>
                        </li>
                        <hr />
                        <li class="nav-item" style="margin-bottom:1%">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span>
                                    <i class="bi bi-house-fill" style="margin-right:8%"></i>
                                </span>                              
                                    Home                                
                            </a>
                        </li>
                        <li class="nav-item" style="margin-bottom:1%">
                            <a class="nav-link" asp-controller="Home" asp-action="Search">
                                <span>
                                    <i class="bi bi-search" style="margin-right:8%"></i>
                                        Search                                    
                                </span>
                            </a>
                        </li>
                        @*<li class="nav-item" style="margin-bottom:1%">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Notifications">
                                <span>
                                    <i class="bi bi-bell-fill" style="margin-right:8%;"></i>
                                    
                                        Create Echo
                                    
                                </span>
                            </a>
                        </li>*@
                        <li class="nav-item" style="margin-bottom:1%">
                            <a class="nav-link" asp-area="Profile" asp-controller="Home" asp-action="Profile">
                                <span>
                                    <i class="bi bi-person-circle" style="margin-right:8%"></i>
                                    
                                        Profile
                                    
                                </span>
                                </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container sticky-bottom">
            &copy; 2023 - Echo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>