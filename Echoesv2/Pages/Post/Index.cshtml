<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostModel[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostModel[0].Caption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostModel[0].ImageUrl)
            </th>
            <th>
